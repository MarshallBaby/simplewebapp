<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <File name="AppLogAppender" fileName="logs/app.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
        <File name="JmsLogAppender" fileName="logs/jms.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
        <File name="ExceptionHandlingLog" fileName="logs/exceptions.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
    </Appenders>
    <Loggers>

        <Logger name="by.marshallbaby.jms" level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="JmsLogAppender"/>
        </Logger>

        <Logger name="by.marshallbaby.exception-handling" level="warn">
            <AppenderRef ref="ExceptionHandlingLog"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>